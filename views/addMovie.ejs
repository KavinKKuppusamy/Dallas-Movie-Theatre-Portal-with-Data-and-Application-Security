<%- include ('partials/loginheader') %>
<div class="container" id="moviecontainer">
<h1>Add New Movie</h1>
<form action="/movies" enctype="multipart/form-data" method="POST">


<div class="form-group">
		<label>Movie Title</label>
		<input type="text" name="title" class="form-control"></input>
</div>
<div class="form-group">
		<label>Genre</label>
		<input type="text" name="genre" class="form-control"></input>
</div>
<div class="form-group">
		<label>Upload Image</label>
		<input type="file" accept="image/*" name="image" class="form-control"></input>
</div>
<div class="form-group">
		<label>Movie Length</label>
		<input type="text" name="length" class="form-control"></input>
</div>
<div class="form-group">
		<label>Show Timings (comma seperated)</label>
		<input type="text" name="showTimings" class="form-control"></input>
</div>
<div class="form-group">
		<label>Available Until</label>
		<input type="date" name="availableUntil" class="form-control"></input>
</div>
<div class="form-group">
		<label>Synopsis</label>
		<textarea name="synopsis" class="form-control"></textarea>
</div>
<div class="form-group">
		<button type="submit" class="btn btn-info" >Save</button>
</div>


</form>
<a href="/successlogin">Cancel</a>
</div>

<%- include ('partials/footer') %>